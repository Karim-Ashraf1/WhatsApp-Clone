# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT=20
RATE_LIMIT_WINDOW=60

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Microservice URLs
AUTH_SERVICE_URL=http://localhost:5001
USERS_SERVICE_URL=http://localhost:5002
CHATS_SERVICE_URL=http://localhost:5003
MESSAGE_SERVICE_URL=http://localhost:5004
MEDIA_SERVICE_URL=http://localhost:5005
Compression_SERVICE_URL=http://localhost:5006

# JWT Authentication
JWT_ISSUER=your-app-name
JWT_AUDIENCE=your-app-audience

# TLS Configuration (for direct TLS termination)
TLS_KEY_PATH=/path/to/private.key
TLS_CERT_PATH=/path/to/certificate.crt