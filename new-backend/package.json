{
  "name": "whatsapp-clone-backend",
  "version": "1.0.0",
  "description": "Backend services for WhatsApp Clone",
  "scripts": {
    "start:user": "cd user-service && npm start",
    "start:message": "cd message-service && npm start",
    "dev:user": "cd user-service && npm run dev",
    "dev:message": "cd message-service && npm run dev",
    "start": "concurrently \"npm run start:user\" \"npm run start:message\"",
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:message\"",
    "install:all": "npm install && cd user-service && npm install && cd ../message-service && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
} 